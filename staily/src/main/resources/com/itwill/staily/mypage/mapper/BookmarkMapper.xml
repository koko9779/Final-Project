<!-- insert -->
<insert id="createBookmark"
		parameterType="com.itwill.staily.mypage.model.dto.Bookmark">
	insert into bookmark (bm_no, m_no,p_no)  values(0,#{mNo},#{pNo})
</insert>

<!-- delete -->
<delete id="deleteBookmark"
		parameterType="int">
	delete from bookmark
	where bm_no = #{bmNo}
</delete>




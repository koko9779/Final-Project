<!-- 리스트출력 -->
<select id="selectList"
		parameterType="int"
		resultType="com.itwill.staily.mypage.model.dto.Bookmark">
	select *
	from product p join bookmark b
	on b.m_no = p.m_no
	join work w
	on p.w_no = w.w_no
	where p.m_no = #{mNo}
</select>
